<title>Relógio Analógico Minimalista</title>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: #0f1115;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        font-family: Arial, sans-serif;
    }

    .clock {
        width: 85vw;
        max-width: 320px;
        aspect-ratio: 1;
        border-radius: 50%;
        background: #1a1d24;
        position: relative;
        box-shadow: 
            0 0 20px rgba(0,0,0,0.6),
            inset 0 0 15px rgba(255,255,255,0.03);
    }

    .center-dot {
        position: absolute;
        width: 10px;
        height: 10px;
        background: #ffffff;
        border-radius: 50%;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
    }

    .hand {
        position: absolute;
        bottom: 50%;
        left: 50%;
        transform-origin: bottom;
        transform: translateX(-50%) rotate(0deg);
        border-radius: 6px;
    }

    .hour {
        width: 6px;
        height: 25%;
        background: #ffffff;
    }

    .minute {
        width: 4px;
        height: 35%;
        background: #d1d5db;
    }

    .second {
        width: 2px;
        height: 40%;
        background: #ef4444;
    }

    /* Marcadores simples */
    .marker {
        position: absolute;
        width: 2px;
        height: 10px;
        background: #888;
        top: 5px;
        left: 50%;
        transform-origin: center 155px;
    }

